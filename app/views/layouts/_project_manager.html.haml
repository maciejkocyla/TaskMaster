.btn-group.btn-inverse.project-manager
  .btn.btn-inverse.span6
    %a{ :class => "dropdown-toggle", "data-toggle" => "dropdown", :href => "#"}
      - if @current_project.nil? 
        wybierz projekt
      -else
        = @current_project.name
      %span{ :class => "caret"}  
    %ul{ :class => "dropdown-menu"}
      - @current_user.projects.each do |project|
        = render(:partial => '/projects/project', locals: {side: 'right_side', project: project})
  - if !@current_project.nil?
    .btn.btn-inverse.span3
      = link_to "delete " + @current_project.name, @current_project, method: :delete, data:{ confirm: "are you sure you want to remove #{@current_project.name}"}   
    .btn.btn-inverse.span3
      = link_to "new task", new_project_task_path(@project)
