.navbar.navbar-inverse
  .navbar-inner.row-fluid
    .brand.span3
      = @current_user.name
    .progress.span8
      %div{ :class => "bar", :style => "width: 60%;"}

    .nav.span12
      %li= link_to "callendar", '#'
      %li= link_to "habits", '#'
      %li= link_to "new project", new_task_path(:will_be_project => true)
      - if !@current_task.nil?
        .nav.pull-right
          %li= link_to "delete " + @current_task.name, '#' unless @current_task.name == 'Daily'
          %li= link_to "new task for " + @current_task.name, new_task_path(:will_be_project => @current_task)

