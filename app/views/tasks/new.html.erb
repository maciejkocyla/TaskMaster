
<h2>Nowe Zadanie</h2>

<%=form_for(@task) do |t|%>
  <div class="span5">

    <div class="span2" style="margin-left: 8px">
      <%= t.label :name, "nazwa"%>
    </div>

    <div class="span9"> 
      <%= t.text_field :name%>
    </div>

    <div class="span2">
      <%= t.label :date, "termin"%>
    </div>

    <div class="span9">
      <%= t.date_select :date%>
    </div>
    
  </div>

  <div class="span6">
    <div class="span2">
      <%= t.label :content, "opis"%>
    </div>
    <div class="span8">
      <%= t.text_area :content, :rows => 7%>
    </div>
  </div>
  
  <% if params[:will_be_project]== 'true'%>
    <%= t.hidden_field :is_project, :value=>params[:will_be_project] %>
  <%else%>
    <%= t.fields_for :relations do |rel|%>
      <%= rel.hidden_field :project_id, :value => params[:will_be_project]%>
    <%end%>
  <%end%>
  <div class="span7">
    <%= t.submit "utwÃ³rz zadanie", class: "btn btn-inverse"%>
  </div>
<%end%>
