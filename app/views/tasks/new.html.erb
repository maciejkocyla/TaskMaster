<%=form_for([@project, @task]) do |t|%>
  <div class="span5">

    <div class="span2" style="margin-left: 8px">
      <%= t.label :name, "nazwa"%>
    </div>

    <div class="span9"> 
      <%= t.text_field :name%>
    </div>

    <div class="span2">
      <%= t.label :date, "termin"%>
    </div>

    <div class="span9">
      <%= t.date_select :date, {:start_year => Time.now.year}%>
    </div>
    
  </div>

  <div class="span6">
    <div class="span2">
      <%= t.label :content, "opis"%>
    </div>
    <div class="span8">
      <%= t.text_area :content, :rows => 7%>
    </div>
    <%= t.hidden_field :task_id, :value => params[:parent_task_id]%>
  </div>
  
